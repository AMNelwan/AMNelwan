def is_palindrome_recursive(s):
    s = ''.join(e for e in s if e.isalnum()).lower()
    
    # Fungsi rekursif untuk memeriksa palindrom
    def check_palindrome(low, high):
        if low >= high:
            return True
        if s[low] != s[high]:
            return False
        return check_palindrome(low + 1, high - 1)
    
    return check_palindrome(0, len(s) - 1)

# Penggunaan
kalimat = "A man, a plan, a canal, Panama"
print(is_palindrome_recursive(kalimat))  # Output: True$
